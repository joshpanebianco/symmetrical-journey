<%- include("partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1 class="jumbo-text">Welcome To The Best Of Sydney</h1>
			<p class="jumbo-text">Check out our hand-picked recommendations</p>
			<% if(currentUser){ %>
			<p>
			 <a class="btn btn-default btn-lg" href="/locations/new">Add New Location</a>
			</p>
			<% } %>
		</div>
	</header>

	<div class="row">
  	<div class="col-lg-12">
  		<h3>Our Most Popular Locations</h3>
  	</div>
	</div>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<%locations.forEach(function(locations) { %>
			<div class="col-md-3 col-sm-6">
				<a href="/locations/<%= locations._id %>">
					<div class="thumbnail home-tn">
              <img class="home-img" src="<%= locations.image %>" alt="">
						<div class="caption">
							<h4><%= locations.name %></h4>
						</div>
		      </div>
				</a>
			</div>


		<% }); %>
  </div> <!-- Row -->
</div>  <!-- container -->
<%- include("partials/footer") %>
