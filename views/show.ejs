<%- include("partials/header") %>

<div class="container">
	<div class="row">
			<div class="col-md-3">
				<p class="lead"><%= location.name %></p>
				<div class="list-group side-bar">
					<li class="list-group-item active">Plan Your Dream Trip</li>
					<li class="list-group-item"><a href="/">Discover More Locations</a></li>
					<li class="list-group-item"><a href="/locations/new">Add Your Own Location</a></li>
				</div>
			</div>
			<div class="col-md-9">
				<div class="thumbnail home-tn">
					<img class="show-img img-responsive" src="<%= location.image %>" alt=""/>
					<div class="caption-full">
						<h4 class="pull-right"><%= location.location %></h4>
						<h4><a href="#"><%= location.name %></a></h4>
						<p><%= location.desc %></p>
					</div>
				</div>
				<% if(currentUser){ %>
				<a href="/locations/<%= location._id %>/delete">Delete</a>
				<% } %>
			</div>
	</div>

</div>



<%- include("partials/footer") %>
